<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/basic_medium">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/card_elevation"
        app:cardCornerRadius="@dimen/card_radius"
        app:contentPadding="@dimen/basic_tiny"
        android:layout_marginBottom="@dimen/basic_tiny"
        android:layout_marginLeft="@dimen/basic_tiny"
        android:layout_marginRight="@dimen/basic_tiny">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cardLogo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/cardTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/basic_small"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/cardLogo"
                android:textSize="@dimen/card_title__text_size"
                android:textStyle="bold"
                tools:text="Nike Air pro" />

            <TextView
                android:id="@+id/cardSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/basic_small"
                android:layout_below="@+id/cardTitle"
                android:layout_toEndOf="@id/cardLogo"
                tools:text="Nike" />

            <ImageView
                android:id="@+id/cardImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardSubtitle"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>